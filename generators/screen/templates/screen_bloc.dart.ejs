<%- importPackages %>

class <%= screenNameUpperCase %>__ScreenBloc 
  extends Bloc<
    <%= screenNameUpperCase %>__ScreenEvent, 
    <%= screenNameUpperCase %>__ScreenState
  > {
  <%= screenNameUpperCase %>__ScreenBloc({
    required this.screenData,
    required <%= screenNameUpperCase %>__ScreenState initialState, 
    required this.uuidProvider,
    required this.analyticsProvider,
    required this.logProvider,
    // --- EVENT HANDLERS ON CONSTRUCTOR BEGIN ---------------------------------
    required this.onScreenStartedEventHandler,
    // --- EVENT HANDLERS ON CONSTRUCTOR END -----------------------------------
  }) : super(initialState) {
    // --- EVENTS BEGIN --------------------------------------------------------
    on<<%= screenNameUpperCase %>__ScreenEvent__ScreenStarted>(
      (event, emit) async {
        await onScreenStartedEventHandler.execute(
          bloc: this,
          event: event,
          emit: emit,
        );
      },
    );
    // --- EVENTS END ----------------------------------------------------------
  }

  final <%= screenNameUpperCase %>__ScreenData screenData;
  final FGS_UTILS__UuidProvider uuidProvider;
  final FGS_UTILS__AnalyticsProvider analyticsProvider;
  final FGS_UTILS__LogProvider logProvider;
  // --- EVENT HANDLERS DECLARATIONS BEGIN -------------------------------------
  final <%= screenNameUpperCase %>__OnScreenStartedEventHandler 
    onScreenStartedEventHandler;
  // --- EVENT HANDLERS DECLARATIONS END ---------------------------------------
}
